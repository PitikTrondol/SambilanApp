<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@color/colorLightOrange">

    <include
        android:id="@+id/cv_job_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        layout="@layout/item_job" />

    <LinearLayout
        android:id="@+id/ll_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_job_list"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_permintaan_diterima"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorCommonOrange"
            android:text="Terima" />

        <Button
            android:id="@+id/btn_permintaan_ditolak"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorLightOrange"
            android:text="Tolak" />
    </LinearLayout>
</RelativeLayout>