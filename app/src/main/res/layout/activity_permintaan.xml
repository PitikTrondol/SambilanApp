<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sambilan.sambilan.view.HalamanPermintaanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar_permintaan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme"
        app:title="Permintaan"
        app:titleTextColor="@color/colorCommonOrange" />

    <include
        android:id="@+id/reusable_main_menu"
        layout="@layout/layout_reusable_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar_permintaan"/>
</RelativeLayout>