<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_diterima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_margin_mid"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="1dp"
    android:background="@color/White">

    <include
        android:id="@+id/cv_diterima"
        layout="@layout/item_job_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/iv_date_sebelum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/cv_diterima"
        android:background="@color/White"
        android:src="@drawable/ic_date" />

    <TextView
        android:id="@+id/tv_sebelum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_diterima"
        android:layout_margin="1dp"
        android:layout_toRightOf="@+id/iv_date_sebelum"
        android:gravity="center"
        android:paddingTop="3dp"
        tools:text="Tanggal sebelum"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_date_sesudah"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_date_sebelum"
        android:background="@color/White"
        android:src="@drawable/ic_date" />

    <TextView
        android:id="@+id/tv_sesudah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sebelum"
        android:layout_margin="1dp"
        android:layout_toRightOf="@+id/iv_date_sesudah"
        android:gravity="center"
        android:paddingTop="5dp"
        tools:text="Tanggal sesudah"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_jobImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/tv_sesudah"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="22dp"
        android:layout_weight="7"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_starbuck" />
</RelativeLayout>
