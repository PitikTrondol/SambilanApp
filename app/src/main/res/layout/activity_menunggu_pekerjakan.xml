<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sambilan.sambilan.view.HalamanMenungguActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tittle_bar_menunggu_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:theme="@style/AppTheme"
        app:title="Menunggu"
        app:titleTextColor="@color/dark_red" />

    <include
        layout="@layout/layout_reusable_recycler"
        android:layout_below="@id/tittle_bar_menunggu_pekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
